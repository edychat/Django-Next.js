# compose/deployment/Dockerfile.db
FROM postgres:16

# Use the standard PostgreSQL image - no custom entrypoint needed
# The environment variables will be set by docker-compose or fetched by backend

# Just ensure proper permissions on the data directory
RUN mkdir -p /var/lib/postgresql/data && \
    chown -R postgres:postgres /var/lib/postgresql/data && \
    chmod 700 /var/lib/postgresql/data

# Use the default PostgreSQL entrypoint and command